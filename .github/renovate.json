{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "assignees": [
    "@A1994SC"
  ],
  "github-actions": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchDatasources": [
        "pypi"
      ],
      "managerFilePatterns": [
        "/(^|/)constraints\\.txt$/"
      ]
    }
  ],
  "dependencyDashboard": true
}
